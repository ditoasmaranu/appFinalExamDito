<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2631"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:text="Dito's Final - Semester Project"
        android:textColor="#E0E0E0"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/mainDetail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/mainTitle"
        android:layout_marginTop="10dp"
        android:text="Hello, In this simple Final exam project i'll create some tab which contains , my detail cloud server and display some data from api implement the recyclerView, linked button and intent."
        android:textColor="#A2A1A1"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mainDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_twotone_filter_drama_24"
        tools:layout_editor_absoluteY="176dp" />


    <Button
        android:id="@+id/toCloudServerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2E4053"
        android:onClick="toCloudServerList"
        android:text="Dito's Cloud Server List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/toLinkCloudServer"
        android:layout_below="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2E4053"
        android:onClick="toLinkCS"
        android:text="Dito's Cloud Server Link"
        app:layout_constraintTop_toBottomOf="@id/toCloudServerList"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/toQuotesTab"
        android:layout_below="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2E4053"
        android:onClick="toQuotesTab"
        android:text="Dito's API quotes list"
        app:layout_constraintTop_toBottomOf="@+id/toLinkCloudServer"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>

    <!--
                android:id="@+id/toArticle"
                pada android:onClick="toArticle" berfungsi untuk memanggil function toArticle pada MainActivity saat di klik

                android:id="@+id/toCloudServerList"
                pada android:text="Dito's Cloud Server List" berfungsi utnuk memanggi function toCloudServerList pada MainActivity saat di klik

                android:id="@+id/toLinkCS"
                pada android:onClick="toLinkCS" berfungsi utnuk memanggi function toLinkCS pada MainActivity saat di klik


    -->